<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_nhn_peliculas_genero_tree" model="ir.ui.view">
            <field name="name">nhn.peliculas.genero.tree</field>
            <field name="model">nhn_peliculas.genero</field>
            <field name="arch" type="xml">
                <tree string="Géneros">
                    <field name="name"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>
        
    
        <record id="view_nhn_peliculas_genero_form" model="ir.ui.view">
            <field name="name">nhn.peliculas.genero.form</field>
            <field name="model">nhn_peliculas.genero</field>
            <field name="arch" type="xml">
                <form string="Género">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <group>
                            <field name="descripcion" nolabel="1"/>
                        </group>
                        <notebook>
                            <page string="Películas">
                                <field name="peliculas_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="anio"/>
                                        <field name="duracion"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
       
        <record id="action_nhn_peliculas_genero" model="ir.actions.act_window">
            <field name="name">Géneros</field>
            <field name="res_model">nhn_peliculas.genero</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>